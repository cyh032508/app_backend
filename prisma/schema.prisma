// Prisma Schema for Supabase PostgreSQL Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      // App 運行時走連線池 (Port 6543)
  directUrl = env("DIRECT_URL")        // Push/Migrate 時直連 (Port 5432)
  // 注意：如果本地沒有 DIRECT_URL 環境變數，可以暫時移除 directUrl 這行
}

model Essays {
  id          String    @id @default(uuid())
  user_id    String
  title       String?
  content     String?
  ocr_raw_text String?
  image_path  String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  @@map("ESSAYS")
}

model Scores {
  id              String    @id @default(uuid())
  essay_id        String
  user_id         String
  rubric_id       String
  total_score     String
  feedback_json   Json?

  // 新增字段 - rank-then-score 相關
  scoring_method  String?   // "rank-then-score" 或 "traditional"
  rank_position   Int?      // 排名位置 (1-50)
  percentile      Int?      // 百分位 (0-100)

  // 新增字段 - 五維度評語
  dimension_feedbacks Json? // 存儲五個維度的評語

  // 保留字段（未來使用）
  grammar_analysis Json?
  vocabulary_usage Json?
  structure_issues Json?
  created_at      DateTime  @default(now())

  @@map("SCORES")
}

model Rubrics {
  id            String    @id @default(uuid())
  name          String
  title         String
  description   String?
  criteria_json Json
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt

  @@map("RUBRICS")
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  hashed_password String
  username       String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@map("USER")
}

